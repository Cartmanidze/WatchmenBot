# ===========================================
# WatchmenBot - Production Environment
# ===========================================
# Copy to .env on server and fill in your values

# PostgreSQL (use strong password!)
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_USE_POLLING=false
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/update
TELEGRAM_WEBHOOK_SECRET=generate_random_64_char_secret_here

# OpenRouter (DeepSeek V3)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OpenAI Embeddings (for RAG)
OPENAI_API_KEY=sk-your-openai-key-here

# Daily Summary Time (server timezone)
DAILY_SUMMARY_TIME=21:00

# Admin Settings
ADMIN_USER_ID=123456789
ADMIN_USERNAME=your_username
ADMIN_REPORT_TIME=10:00
ADMIN_TIMEZONE=+06:00
